
@{
    ViewData["Title"] = "ModificarRegistro";
    
}
@model Stock

 <head>
     <style>
         .contenedor
         {
            margin-bottom: 20px;
            
         }
        .Boton
        {
            margin-top: 20px;
        }
     </style>
 </head>

<div class="row" style="align-items">

   <div class="col-8">
       <form asp-action = "SetModificacion" asp-controller="Stock" method="post">
          <div class="contenedor">    
                  <input class="form-control" asp-for="Id" type="hidden"/>
                  <h7>Nombre</h7>
                  <input class="form-control" asp-for="Nombre" type="text" />
                  <h7>Marca</h7>
                  <input class="form-control" asp-for="Marca" type="text"/>
                  <h7>Modelo</h7>
                  <input class="form-control" asp-for="Modelo" type="text"/>
                   <h7>Tipo</h7>
                  <input class="form-control" asp-for="Tipo" type="text"/>
                  <h7>Area</h7>
                  <input class="form-control" asp-for="Area" type="text"/>
                  <h7>Cantidad</h7>
                  <input class="form-control" asp-for="Cantidad" type="text"/>
                  <h7>Estado</h7>
                   <input class="form-control" asp-for= "Estado" type="text"/>


            <div class="Boton">
                <button type="submit" class="btn btn-primary">Modificar Registro</button>
            </div>
         </div>
       </form>
   </div>
</div>
