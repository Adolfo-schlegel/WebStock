
@{
    ViewData["Title"] = "Index";
    
}
@model UserRegister
<head>
    <title>Registro</title>
</head>

<body>
    <div class= "container">
          <div class="row justify-content-center">
               <div class="col-4">
                <form asp-action = "RegisterUser" asp-controller="Register" method="post">
              <div class="mb-2">
                     <label for="exampleInputEmail1" class="form-label">Correo</label>
                      <input class="form-control" asp-for="Email1" type="text">
              </div>

              <div class="mb-2">
                      <label for="exampleInputPassword1" class="form-label">Contraseña</label>
                      <input class="form-control" asp-for="Password1" type="text">
              </div>

              <div class="mb-2">
                      <label for="exampleInputPassword1" class="form-label">Confirmar contraseña</label>
                      <input class="form-control" asp-for="Password21" type="text">
              </div>

              <div class="mb- form-check">
                      <input type="checkbox" class="form-check-input" id="exampleCheck1">
                      <label class="form-check-label" for="exampleCheck1">Check me out</label>
              </div>

              <div class="row">
                  <div class="col-8">
                     <button type="submit" class="btn btn-primary">Registrarse</button>
                  </div>
                    
              </div>                     
            </form>
           </div>
          </div>
        </div>
</body>

